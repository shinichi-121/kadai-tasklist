<h1>タスクの作成</h1>

<%= form_with(model: @task, local: true) do |f| %>
  
  <%= f.label :status, "スタッツ" %>
  <%= f.text_field :status %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>

<%= render "form", task: @task %>
<%= link_to "一覧に戻る", tasks_path %>




